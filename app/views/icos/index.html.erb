<% @icos.each do |ico| %>
    <div class="col-md-3 col-xs-6">
      <div class="thumbnail">
        <%= link_to (image_tag ico.logo.url(:small)), ico %>
        <div class="caption">
          <ul class="list-group">
            <li class="list-group-item-2"><h4 style="font-size:16px;"><%= link_to ico.name, ico %></h4></li>
            <li class="list-group-item-2" style="font-size:12px;"><%= ico.tagline %></li>
          </ul>
          Amount raised:
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
              $26,432
          </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-xs-8 col-sm-6">
              &#9889; rating
            </div>
            <div class="col-xs-4 col-sm-6">
              <%= link_to "More", ico %>
            </div>
          </div>                  
        </div>
      </div>
    </div>
<% end %>